{
  "name": "Naver Blog PC Web",
  "version": "0.1",
  "description": "데스크톱에서 네이버 블로그 들어갔을 때 모바일 페이지가 아닌 자동으로 PC버전으로 보여지게 하기",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "favicon.png"
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon.png"
    }
  },
 "content_scripts": [
    {
      "matches": [
        "http://blog.naver.com/*",
        "http://m.blog.naver.com/*",
        "https://blog.naver.com/*",
        "https://m.blog.naver.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "manifest_version": 2
}
